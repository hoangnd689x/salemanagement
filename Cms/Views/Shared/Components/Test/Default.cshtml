@model ListCustomerWalletViewModel
@using Cms.Code.StringHelper
@{

}
@if (Model != null && Model.CustomerWallets.Count > 0)
{


    <div class="portlet light bordered">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-list font-red"></i>
                <span class="caption-subject font-red sbold uppercase">@ViewData["Title"]</span>
            </div>

        </div>
        <div class="portlet-body form">
            <table class="table table-striped  b-t b-light">
                <thead>
                    <tr>
                        <th>Người dùng</th>
                        <th>Số tiền</th>
                        <th>Quốc gia</th>
                        <th>Ngày tạo</th>
                        <th>Ngày sửa</th>
                        <th>Người tạo</th>
                        <th>Người sửa</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model.CustomerWallets)
                {
                        <tr>
                            <td>@item.Customer.Name</td>
                            <td>@item.Balance.ToPriceText()</td>
                            <td>@item.Country.Name</td>
                            <td>
                                @item.DateCreated
                            </td>
                            <td>
                                @item.DateModified
                            </td>
                            <td>
                                @item.UserCreated
                            </td>
                            <td>
                                @item.UserModified
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>


}
else
{    <div class="portlet light bordered">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-list font-red"></i>
                <span class="caption-subject font-red sbold uppercase">@ViewData["Title"]</span>
            </div>

        </div>
        <div class="portlet-body form">
            <div class="alert alert-danger"> Chưa tạo ví người dùng</div>
        </div>
    </div>
}
